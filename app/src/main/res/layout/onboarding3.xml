    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/onboarding3"
    android:gravity="center_horizontal"
    android:padding="25dp">

    <Button
        android:id="@+id/start_button"
