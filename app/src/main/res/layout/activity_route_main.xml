<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="60dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="막차까지 %d분 남았어요!"
               android:textStyle="bold"
               android:textSize="23sp"/>

           <Space
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <Button
               android:id="@+id/timetableBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="시간표"/>
           <!--버튼 커스텀 필요-->
           </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="출발역 -> 도착역"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/custom_main_textview"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/app_logo"
            android:layout_marginBottom="20dp"/>
        <!--지하철 이미지 넣을 위치-->


        <android.widget.Button
            android:id="@+id/changeRouteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modify_path_text"
            android:background="@drawable/custom_button_white"
            android:layout_marginBottom="10dp"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <android.widget.Button
            android:id="@+id/setAlarmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_alarm_text"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>