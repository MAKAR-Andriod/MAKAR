<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_color"
        app:menu="@menu/menu_toolbar"
        app:titleTextAppearance="@style/ToolbarTitle">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="80dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <!--email-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_text"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/signupEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_signup_hint"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_marginBottom="30dp"
            />

        <!--비밀번호-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_text"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/signupPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_signup_hint"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:maxLength="15"
            android:maxLines="1"
            android:layout_marginBottom="30dp"/>


        <!--비밀번호 확인-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_check_text"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/signupPasswordCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_check_signup_hint"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:maxLength="15"
            android:maxLines="1"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!--signupBtn-->
        <android.widget.Button
            android:id="@+id/signup_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/main_color"
            android:text="@string/signup_confirm_button"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>